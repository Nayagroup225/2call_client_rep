<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.block.client.VoiceActivity">

    <RelativeLayout
        android:id="@+id/incoming_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back_1"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="수신전화"
            android:textColor="#ffffff"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_incoming_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:gravity="center"
            android:text="3422343434"
            android:textColor="#ffffff"
            android:textSize="39sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_incoming_number_again"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_incoming_number"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="휴대전화 "
            android:visibility="invisible"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/iv_receive_call"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="40dp"
            android:src="@drawable/icon_accept" />

        <ImageView
            android:id="@+id/iv_decline_call"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="40dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_cancel" />

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:layout_marginBottom="6dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="#aaaaaa"
                android:layout_marginBottom="5dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:text="메시지보내기"
                android:gravity="center"
                />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/talking_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back_2"
        android:visibility="invisible"
        >

        <Chronometer
            android:id="@+id/chronometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="#22aa22"
            android:textSize="21sp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            />

        <TextView
            android:id="@+id/tv_talking_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textStyle="normal"
            android:textSize="39sp"
            android:layout_marginTop="110dp"
            android:text="3422343434"
            android:gravity="center"
            />

        <ImageView
            android:id="@+id/iv_talking_decline_call"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_cancel" />

        <LinearLayout
            android:layout_above="@id/iv_talking_decline_call"
            android:layout_marginBottom="25dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginBottom="10dp"
                android:gravity="center|bottom"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/icon_recording"
                        android:layout_marginBottom="1dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="녹음"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:layout_marginTop="-10dp"
                        android:textColor="#ffffff"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/icon_waiting"
                        android:layout_marginBottom="8dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="통화 대기"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:layout_marginTop="-10dp"
                        android:textColor="#ffffff"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_height="45dp"
                        android:layout_width="45dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/icon_bluetooth"
                        android:layout_marginBottom="7dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="블루투스"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:layout_marginTop="-10dp"
                        android:textColor="#ffffff"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:gravity="center|bottom"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:id="@+id/speaker_menu_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/icon_speaker"
                        android:layout_marginBottom="3dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="스피커"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:layout_marginTop="-10dp"
                        android:textColor="#ffffff"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/icon_mute"
                        android:layout_marginBottom="5dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="내 소리 차단"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:layout_marginTop="-10dp"
                        android:textColor="#ffffff"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_height="45dp"
                        android:layout_width="45dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/icon_keypad"
                        android:layout_marginBottom="6dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="키패드"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:layout_marginTop="-10dp"
                        android:textColor="#ffffff"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:id="@+id/first_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/first_screen"
        />
</RelativeLayout>

